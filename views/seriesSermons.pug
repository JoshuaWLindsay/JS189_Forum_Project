extends layout 

block main 
  div(class="container")
    div(class="row")
      a(class="text-center" href=`/churches/${churchName}/series/page/1`)
        h2=churchName
    div(class="row")
      a(class="text-center" href=`/churches/${churchName}/series/${seriesName}/sermons/page/1`)
        h3=seriesName
    div(class="row")
      each sermon in seriesSermons 
        div(class="col-xs-2 col-sm-6 col-md-3 col-lg-4 col-xl-6 text-center")
          <iframe src="https://www.youtube.com/embed/#{sermon.youtube_id}?rel=0&modestbranding=1" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>
          a(href=`/churches/${churchName}/series/${seriesName}/sermons/${sermon.name}/threads/page/1`)
            h4=sermon.name
    div(class="row text-center")
      each page in pageArray
        if page === +currentPage
          ul(class="pagination")
            li(class="page-item active")
              a(href=`/churches/${churchName}/series/${seriesName}/sermons/page/${page}`)
                h6=page
        else
          ul(class="pagination")
            li(class="page-item")
              a(href=`/churches/${churchName}/series/${seriesName}/sermons/page/${page}`)
                h6=page


